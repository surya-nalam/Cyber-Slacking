<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snort Alerts</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
    </style>
</head>
<body>
    <h1>Detected Snort Alerts</h1>
    <table>
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>Alert ID</th>
                <th>Message</th>
                <th>Priority</th>
                <th>Protocol</th>
                <th>Source IP</th>
                <th>Source Port</th>
                <th>Destination Domain</th>
                <th>Destination IP</th>
                <th>Destination Port</th>
               
            </tr>
        </thead>
        <tbody>
            <% alerts.forEach(alert => { %>
                <tr>
                    <td><%= alert.timestamp %></td>
                    <td><%= alert.alert_id %></td>
                    <td><%= alert.alert_message %></td>
                    <td><%= alert.priority %></td>
                    <td><%= alert.protocol %></td>
                    <td><%= alert.dest_ip %></td>
                    <td><%= alert.src_port %></td>
                    <td>
                        <% if (alert.src_domain) { %>
                            <a href="http://<%= alert.src_domain %>" target="_blank"><%= alert.src_domain %></a>
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>
                    <td><%= alert.src_ip %></td>
                    <td><%= alert.dest_port %></td>
                    
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
